@model List<DiaryEntry>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl max-md:text-2xl  font-bold text-white">My Diary Entries</h1>
        <a asp-action="Create" asp- class="bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-700 hover:to-blue-800 text-white max-md:text-small px-5 py-3 rounded-lg transition font-medium shadow-lg">
            Create New Entry
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="space-y-4">
            @foreach (var entry in Model)
            {
                <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-xl p-6 hover:bg-slate-800/70 transition-all duration-300">
                    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                        <div class="flex-1 min-w-0">
                            <h3 class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-2">Title</h3>
                            <p class="text-lg font-semibold text-white truncate">
                                @if (entry.Title.Length > 50)
                                {
                                    @entry.Title.Substring(0, 50)
                        
                                    <text>...</text>
                                }
                                else
                                {
                                    @entry.Title
                                }
                            </p>
                        </div>

                        <div class="flex-[2] min-w-0">
                            <h3 class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-2">Content</h3>
                            <p class="text-base text-slate-300 line-clamp-2">
                                @if (entry.Content.Length > 120)
                                {
                                    @entry.Content.Substring(0, 120)
                        
                                    <text>...</text>
                                }
                                else
                                {
                                    @entry.Content
                                }
                            </p>
                        </div>

                        <div class="flex-shrink-0">
                            <h3 class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-2">Date</h3>
                            <p class="text-sm text-slate-300">@entry.Created.ToString("MMM dd, yyyy")</p>
                        </div>

                        <div class="flex lg:flex-col gap-3 lg:gap-2 flex-shrink-0">
                            <a asp-controller="DiaryEntries" asp-action="Edit" asp-route-id="@entry.Id"  class="text-blue-400 hover:text-blue-300 font-medium transition-colors">
                                Edit
                            </a>
                            <a asp-controller="DiaryEntries" asp-action="Delete" asp-route-id="@entry.Id" class="text-rose-400 hover:text-rose-300 font-medium transition-colors">
                                Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-xl p-16 text-center">
            <h3 class="text-2xl font-bold text-white">No entries yet</h3>
            <p class="mt-3 text-lg text-slate-400">Get started by creating your first diary entry.</p>
            <div class="mt-8">
                <a asp-action="Create" class="inline-flex items-center px-8 py-4 shadow-lg text-lg font-semibold rounded-xl text-white bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 transition-all duration-300">
                    Create New Entry
                </a>
            </div>
        </div>
    }
</div>