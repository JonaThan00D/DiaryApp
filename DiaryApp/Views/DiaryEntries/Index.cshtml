@model List<DiaryEntry>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800">My Diary Entries</h1>
        <a class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2.5 rounded-lg transition font-medium cursor-pointer">
            + New Entry
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="flex flex-col">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider w-1/5">
                            Title
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider w-2/5">
                            Content
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider w-1/6">
                            Date
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider w-1/6">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var entry in Model)
                    {
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-6 py-5 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">
                                    @if (entry.Title.Length > 30)
                                    {
                                        @entry.Title.Substring(0, 30)<text>...</text>
                                    }
                                    else
                                    {
                                        @entry.Title
                                    }
                                </div>
                            </td>
                            <td class="px-6 py-5">
                                <div class="text-sm text-gray-600">
                                    @if (entry.Content.Length > 80)
                                    {
                                        @entry.Content.Substring(0, 80)<text>...</text>
                                    }
                                    else
                                    {
                                        @entry.Content
                                    }
                                </div>
                            </td>
                            <td class="px-6 py-5 whitespace-nowrap">
                                <div class="text-sm text-gray-600">@entry.Created.ToString("MMM dd, yyyy")</div>
                            </td>
                            <td class="px-6 py-5 whitespace-nowrap">
                                <div class="flex items-center space-x-3 text-sm font-medium">
                                    <a class="text-blue-500 hover:text-blue-800 cursor-pointer">
                                        Edit
                                    </a>
                                    <a class="text-green-600 hover:text-green-800">
                                        View
                                    </a>
                                    <a  class="text-red-600 hover:text-red-800">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-md p-16 text-center">
            <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h3 class="mt-4 text-xl font-medium text-gray-900">No entries yet</h3>
            <p class="mt-2 text-base text-gray-500">Get started by creating your first diary entry.</p>
            <div class="mt-8">
                <a class="inline-flex items-center px-6 py-3 border border-transparent shadow-sm text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition">
                    + New Entry
                </a>
            </div>
        </div>
    }
</div>